# Jai MCP Server Configuration

# Required: API credentials for accessing Jai platform
JAI_API_KEY=your-admin-api-key-here
JAI_TENANT=your-tenant-id
JAI_MCP_ENDPOINT=https://mcp.your-tenant.jai.com

# Optional: Debug and logging
JAI_DEBUG=false
JAI_LOG_LEVEL=INFO

# Optional: Rate limiting
JAI_RATE_LIMIT_REQUESTS=60
JAI_RATE_LIMIT_WINDOW=60

# Optional: Request timeout
JAI_REQUEST_TIMEOUT=30

# Optional: Cache settings
JAI_CACHE_TTL=300

# MCP-API Gateway Configuration (if running gateway)

# Gateway server settings
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8080
GATEWAY_DEBUG=false

# Internal API connection
JAI_INTERNAL_API_URL=http://jai-api.internal:8000
JAI_INTERNAL_API_KEY=internal-api-key

# Authentication
JAI_ALLOWED_ADMINS=admin@example.com,sysadmin@example.com

# Audit logging
JAI_AUDIT_ENABLED=true
JAI_AUDIT_LOG_FILE=/var/log/jai-mcp-gateway/audit.log

# Proxy settings
JAI_PROXY_TIMEOUT=30